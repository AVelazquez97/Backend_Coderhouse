<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <hr>

    {{#if hayProductos}}
    <div class="table-responsive">
        <table class="table table-dark mt-2">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>$ {{this.price}}</td>
                <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning mt-2">{{products.error}}</h3>
    {{/if}}
    <br>
    <a href="/" type="button" class="btn btn-back-to-insert mt-2">Cargar un nuevo producto</a>
</div>