extends layouts/index.pug

block vista
    div(class="jumbotron")
        h1='Vista de Productos'
        hr
        if hayProductos
            div(class="table-responsive")
                table(class="table table-dark mt-2")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each product in products
                            tr
                                td=product.title
                                td='$' + product.price
                                td
                                    img(width="50" src=product.thumbnail alt="not found")
        else
            h3(class="alert alert-warning mt-2")=products.error
        br
        a(href="/" type="button" class="btn btn-back-to-insert")='Cargar un nuevo producto'